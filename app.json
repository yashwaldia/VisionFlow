{
  "expo": {
    "name": "VisionFlow AI",
    "slug": "visionflow-ai",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "automatic",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#0A0A0F"
    },
    "assetBundlePatterns": [
      "**/*"
    ],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.yourcompany.visionflowai",
      "infoPlist": {
        "NSCameraUsageDescription": "VisionFlow needs camera access to capture images for AI analysis.",
        "NSPhotoLibraryUsageDescription": "VisionFlow needs photo library access to analyze existing images.",
        "NSMicrophoneUsageDescription": "VisionFlow needs microphone access for voice input (optional feature)."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#0A0A0F"
      },
      "package": "com.yourcompany.visionflowai",
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE",
        "android.permission.NOTIFICATIONS",
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      [
        "expo-camera",
        {
          "cameraPermission": "Allow VisionFlow to access your camera to capture images for AI analysis."
        }
      ],
      [
        "expo-image-picker",
        {
          "photosPermission": "Allow VisionFlow to access your photos to analyze existing images."
        }
      ],
      "@react-native-community/datetimepicker"
    ],
    "extra": {
      "eas": {
        "projectId": "f395c086-d6b8-4524-8f42-c62dff82a5b8"
      }
    }
  }
}
